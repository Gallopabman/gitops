pipeline {
    agent any
    
    environment {
    VERSION = "1.10-RELEASE"

    }
    stages {

        stage('Maven test') {
            steps {
                sh "mvn clean test --file Code/pom.xml"
            }
        }
        stage('Maven release') {
            steps {
                sh "mvn versions:set -DnewVersion=2.0"
                sh "mvn clean deploy --settings Code/settings.xml"  
            }
        }
        stage('Maven snapshot') {
            steps {
                sh "mvn versions:set -DnewVersion=2.1-SNAPSHOT"
                sh "mvn clean deploy --settings Code/settings.xml" 
            }
        }
        stage('build image / run container / tag') {
            steps { 
                sh "sudo docker build --rm --no-cache -t semperti-bootcamp ."
                sh "docker run --rm --net=host --name=semperti-bootcamp-app -d semperti-bootcamp"
                sh "docker tag semperti-bootcamp docker.io/36541321/semperti-bootcamp"          
            }           
        }
        stage('docker push') {
            steps { 
                
                sh "docker push 36541321/semperti-bootcamp:latest" 
                
            }
        }
    }    
}
